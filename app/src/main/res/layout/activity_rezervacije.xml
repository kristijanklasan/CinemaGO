<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerRezervacija"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RezervacijeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigationIzbor"
        android:foregroundGravity="center"></FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigationIzbor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:foregroundGravity="bottom"
        app:menu="@menu/bottom_rezervacija"
        tools:ignore="MissingConstraints">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>